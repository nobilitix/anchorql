{
  "name": "anchorql",
  "type": "module",
  "version": "1.0.0",
  "description": "GraphQL layer for Anchor programs",
  "homepage": "https://github.com/nobilitix/anchorql",
  "repository": "nobilitix/anchorql",
  "main": "dist/index.js",
  "source": "src/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "serum-vial": "bin/anchorql.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc-watch --project tsconfig.dev.json --onSuccess 'node --experimental-specifier-resolution=node ./dist/index'",
    "lint": "tsc --noEmit && eslint --config .eslintrc.cjs --ext .js,.ts --fix .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "npx only-allow yarn",
    "prepare": "husky install"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "commander": "^8.1.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.3",
    "koa": "^2.13.1",
    "koa-graphql": "^0.9.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^10.1.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-graphql": "^0.8.5",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-router": "^7.4.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.1.1",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
